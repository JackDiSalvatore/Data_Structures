#ifndef INTERPRETER_H_
#define INTERPRETER_H_

#include <iostream>
#include <list>
#include <algorithm>	// find()

using namespace std;

class IdNode {
public:
	IdNode(char *s = "", double e = 0) {
		id = strdup(s);
		value = e;
	}
private:
	char *id;
	double value;
	friend class Statement;
	friend ostream& operator<< (ostream&, const IdNode&);
};

#endif /* INTERPRETER_H_ */
